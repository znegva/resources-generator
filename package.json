{
  "name": "resources-generator",
  "version": "0.1.5",
  "description": "Another resources generator for your Cordova project",
  "author": "Martin Kausche",
  "license": "MIT",
  "keywords": [
    "resources",
    "generator",
    "cordova",
    "phonegap",
    "icon",
    "splash",
    "resize"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/znegva/resources-generator.git"
  },
  "bugs": {
    "url": "https://github.com/znegva/resources-generator/issues"
  },
  "homepage": "https://github.com/znegva/resources-generator#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "preferGlobal": false,
  "bin": {
    "resources-generator": "./bin/resources-generator"
  },
  "files": [
    "dist/",
    "bin/"
  ],
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc mocha",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "view-coverage": "nyc report --reporter=html && open coverage/index.html",
    "build": "tsc"
  },
  "mocha": {
    "spec": "**/*.spec.ts",
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "full-trace": true,
    "bail": true
  },
  "nyc": {
    "include": [
      "**/*.ts",
      "**/*.tsx"
    ],
    "exclude": [
      "**/*.spec.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "fs-extra": "^9.1.0",
    "gm": "^1.23.1",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^9.0.11",
    "@types/gm": "^1.18.2",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "chai": "^4.2.0",
    "codecov": "^3.2.0",
    "cross-env": "^5.2.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^3.9.9"
  }
}
